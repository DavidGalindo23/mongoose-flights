<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>airline</title>
</head>
<body>
    <nav>
        <a href="/tickets/new" <%- flight === 'Add Ticket' ? 'class="active"' : '' %>>ADD TICKET</a>
    </nav>
  <h1>Flight List</h1>
  <table>
      <thead>
          <tr>
              <th>airline</th>
              <th>flightNo</th>
              <th>Airport</th>
              <th>Departs</th>
              <th>DETAILS</th>
          </tr>
      </thead>
      <tbody>
          <% flights.forEach(function(f) { %>
              <tr>
                  <td><%= f.airline %></td>
                  <td><%= f.flightNo %></td>
                  <td><%= f.airport %></td>
                  <td><%= f.departs %></td> 
                  <td><a href="/flights/<%=f._id %>">Details</a></td>
              </tr>
          <% }); %>
      </tbody>
  </table>
</body>
</html>